{
  "name": "@nextcode/pg-model",
  "version": "1.0.0-alpha.4",
  "description": "Postgres model layer package with zero dependencies",
  "keywords": [
    "model",
    "database",
    "model layer",
    "pg",
    "postgres",
    "typescript",
    "jest",
    "node",
    "nodejs"
  ],
  "author": "Tamino Martinius <dev@zaku.eu>",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "jsnext:main": "./dist/index.mjs",
  "typings": "./dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist/*",
    "bin/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tamino-martinius/node-pg-model.git"
  },
  "engines": {
    "node": ">=6.14.0"
  },
  "scripts": {
    "coverage": "rm -rf coverage* && jest --coverage --maxWorkers=1",
    "test": "jest --maxWorkers=1",
    "watch": "tsc -w",
    "ci": "npm run coverage && codecov",
    "compile": "rm -rf dist/* && tsc && tsc-mjs --sourceMap --declaration false --target esnext --module esnext --mjs",
    "preversion": "npm run compile && git add ."
  },
  "devDependencies": {
    "@types/jest": "^23.3.7",
    "@types/node": "^10.12.0",
    "@types/pg": "^7.4.11",
    "codecov": "^3.1.0",
    "jest": "^23.6.0",
    "pg": "^7.5.0",
    "ts-jest": "^23.10.4",
    "ts-mjs": "^3.1.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "peerDependencies": {
    "pg": "^7.5.0"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.(test|spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/__benchmark__/**",
      "!src/__tests__/**",
      "!src/__mocks__/**"
    ]
  }
}
